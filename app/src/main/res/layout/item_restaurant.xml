<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/restaurant"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/restaurant"
        android:layout_toRightOf="@+id/restaurant"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/restaurant_list_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restaurant_list_place_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/restaurant_list_stars_imageView0"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>

            <ImageView
                android:id="@+id/restaurant_list_stars_imageView1"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>

            <ImageView
                android:id="@+id/restaurant_list_stars_imageView2"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>

            <ImageView
                android:id="@+id/restaurant_list_stars_imageView3"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>

            <ImageView
                android:id="@+id/restaurant_list_stars_imageView4"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/restaurant_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/restaurant"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/restaurant"
        android:layout_toRightOf="@+id/restaurant"
        android:background="?attr/colorPrimaryDark"

        />
</RelativeLayout>