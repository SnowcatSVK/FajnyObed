<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/restaurant"
        android:layout_toEndOf="@+id/restaurant"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/restaurant_list_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hokejka Pub"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restaurant_list_place_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GerlachovskÃ¡ 19"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/restaurant_list_stars_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignBottom="@+id/restaurant"
        android:layout_toRightOf="@+id/restaurant"
        android:layout_toEndOf="@+id/restaurant"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        />
</RelativeLayout>